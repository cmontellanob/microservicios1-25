<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    h1 {
        text-align: center;
        color: blue;
        padding: 10px;
    }

    form {
        display: flex;
        flex-direction: column;
        width: 50%;
        margin: 0 auto;
        background-color: rgb(234, 227, 241);
        border-radius: 5px;
    }

    .btn {
        background-color: blue;
        color: white;
        padding: 5px;
        margin: 5px;
        border-radius: 5px;
        border: none;
    }

    label {
        margin: 5px;
    }

    input {
        margin: 5px;
        padding: 5px;
        border-radius: 5px;
        border: 1px solid blue;
    }

    header .container {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    header .container .logo {
        width: 200px;
    }

    /*esta sin nav*/
    header .container nav a {
        color: rgb(62, 32, 228);
        text-decoration: none;
        margin: 0 10px;
        font-weight: bold;
        font-size: 1.2em;
        font-family: "Roboto";
    }
    .container{
    width: 1140px;
    margin: 0 auto;
    padding-right: 15px;
    padding-left: 15px;
    position: relative;
}
</style>
<header>
    <div class="container">
        <a href="index.html">
            <img src="img/logo.png" class="logo">
        </a>
        <nav>
            <a href="/">Inicio</a>
            <a href="/listar">CRUD Productos</a>

        </nav>
    </div>
</header>
<div class="container">
    <% include('layout', {body: null}) %>
    <h1>Agregar Producto a la BD</h1>
    <form action="/agregar" method="post">
        <label for="nombre">Nombre</label>
        <input type="text" name="nombre" id="nombre" required>
        <label for="precio">Precio</label>
        <input type="number" name="precio" id="precio" required>
        <label for="imagen">Dir - Imagen</label>
        <input type="text" name="imagen" id="imagen">
        <label for="detalle">Detalle</label>
        <input type="text" name="detalle" id="detalle">
        <button type="submit" class="btn">Agregar</button>
    </form>
</div>

